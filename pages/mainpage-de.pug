extends pug/page

mixin mainpage-de()
  main.page__content.main
    .main__title
      h1.title.title--main Erstelle dein Lernstil-Diagramm
      .main__text
        p
        | und entdecke deine Lernstärken und Lernherausforderungen
        br
        a(href= "https://learningfromexperience.com/research-library/the-kolb-learning-style-inventory-4-0/" target="_blank")
          | Das Kolb Lernstil-Inventar 4.0
      .main__button
        a(href= "/app").button.button--secondary Los gehts!


block data
  - var title = "Lernstil-Diagramm — Online Werkzeug zum erstellen eines Lernstil-Diagramms nach Kolbs Inventar"
  - var language = "de"
block body
  .page.page--bg-color-primary
    .page__wrapper
      header.page__header.header
        nav.nav
          ul.nav__list
            li.nav__item.nav__item--right
              +nav-link-github("style-home")
        +mainpage-de()
      footer.page__footer.footer
        +coded-with-love-using("Vue.js", "https://vuejs.org/")
